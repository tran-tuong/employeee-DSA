void addEmail(Employee& emp) {
    bool valid = true;
    do {
        cout << "Email: ";
        cin >> emp.email;
        valid = checkEmail(emp.email);
        if (!valid) {
            cout << "Invalid email!" << endl;
        }
    } while (!valid);
}

